@model SEProject.Models.DaoTao

@{
    ViewBag.Title = "Chỉnh sửa";
}

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>DaoTao</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            <h4>Môn học</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tenMonHoc)
            @Html.ValidationMessageFor(model => model.tenMonHoc)
        </div>

        <div class="editor-label">
            <h4>Giảng viên</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tenGiangVien)
            @Html.ValidationMessageFor(model => model.tenGiangVien)
        </div>

        <div class="editor-label">
            <h4>Khóa</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.khoaHoc)
            @Html.ValidationMessageFor(model => model.khoaHoc)
        </div>

        <div class="editor-label">
            <h4>Ngành</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nganhHoc)
            @Html.ValidationMessageFor(model => model.nganhHoc)
        </div>

        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
