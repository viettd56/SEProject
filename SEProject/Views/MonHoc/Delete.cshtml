@model SEProject.Models.MonHoc

@{
    ViewBag.Title = "Xóa";
}

<h2>Xóa</h2>

<h3>Bạn có chắc muốn xóa môn học này ?</h3>
<fieldset>
    <legend>Môn Học</legend>

    <div class="editor-label">
         <h4>Mã môn học</h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.maMonHoc)
    </div>

    <div class="editor-label">
         <h4>Tên môn học</h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.tenMonHoc)
    </div>

    <div class="editor-label">
         <h4>Số tín chỉ</h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.soTinChi)
    </div>

    <div class="editor-label">
         <h4>Giờ lý thuyết</h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.gioLyThuyet)
    </div>

    <div class="editor-label">
         <h4>Giờ thực hành</h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.gioThucHanh)
    </div>

    <div class="editor-label">
         <h4>Giờ tự học</h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.gioTuHoc)
    </div>

    <div class="editor-label">
         <h4>Môn học tiên quyết</h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.maMonKienQuyet)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
